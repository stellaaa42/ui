---
const faqData = {
  Acct: [
    {
      question: "Q1?",
      answer: 
        "a1"
    }
  ],
  P: [
    {
      question: "Q2?",
      answer: "a2"
    },
    {
      question: "Q1?",
      answer: "a3"
    }
  ],

};
---

<section class="faq">
  <h2>FAQs</h2>
  {Object.entries(faqData).map(([category, items]) => (
    <div class="faq-category">
      <h3>{category}</h3>
      {items.map(item => (
        <details class="faq-item">
          <summary>{item.question}</summary>
          <p>{item.answer}</p>
        </details>
      ))}
    </div>
  ))}
</section>

<style>
  .faq-category {
    margin-bottom: 2rem;
  }
  .faq-item {
    margin-bottom: 1rem;
  }
  summary {
    cursor: pointer;
    font-weight: bold;
  }
</style>