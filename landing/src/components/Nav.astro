<script>
  document.addEventListener('DOMContentLoaded', () => {
  const hamburger = document.querySelector('.hamburger');
  const mobileMenu = document.querySelector('.mobile-menu');

  if (mobileMenu && hamburger) {
  hamburger?.addEventListener('click', () => {
    mobileMenu.classList.toggle('active');
    });
  }
});
</script>

<script src="https://accounts.google.com/gsi/client" async defer></script>
<script is:inline>
  console.log("Current origin:", window.location.origin);
  // const googleClientId = import.meta.env.PUBLIC_GOOGLE_CLIENT_ID;
  const googleClientId = "28745403363-9stn5an0ecsm8s6t67cosat0qti8plrr.apps.googleusercontent.com"; // Replace with your actual client ID

  function handleCredentialResponse(response) {
    if (!response || !response.credential) {
    console.error("Google login failed or user canceled.");
    return;
    }
    const token = response.credential;
    console.log("Google Token:", token);
    const payload = JSON.parse(atob(token.split('.')[1]));
    const email = payload.email;
    console.log("User email:", email);
    localStorage.setItem("google_token", response.credential);
    location.reload(); // Reload to update UI
  }

  window.onload = function () {
    // console.log("Google Client ID:", googleClientId);

    if (!googleClientId || googleClientId === "undefined") {
      console.error("Google Client ID is missing!");
      return;
    }

    google.accounts.id.initialize({
      client_id: googleClientId,
      callback: handleCredentialResponse,
      auto_select: false,
      itp_support: true
    });

    google.accounts.id.renderButton(
      // document.getElementById("google-login-button"),
      document.getElementById("googleSignInDiv"),
      { theme: "outline", size: "large" } // Customize button style
    );
  };
</script>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.8); /* Semi-transparent dark background */
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
  }
  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: inherit;
    }
  .links a {
    color: white;
    text-decoration: none;
    margin-left: 1rem;
  }
  .hamburger {
    display: none; /* Hidden by default on desktop */
    background: none;
    border: none;
    color: white;
    padding: 0.75rem;
    cursor: pointer;
    width: 48px; /* Explicit width */
    height: 48px; /* Explicit height */
    margin-left: auto; /* Push to the right */
    text-align: center;
    font-size: 1.5rem; /* Larger icon */
    z-index: 100;
  }
  .mobile-menu {
    display: none;
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.9);
    padding: 1rem;
    flex-direction: column;
    gap: 1rem;
  }
  .mobile-menu a {
    display: block;  /* This is the key property */
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
    padding: 10px 0;
    border-bottom: 1px solid #333;
  }
  .mobile-menu a:last-child {
    border-bottom: none;
  }
  .button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%); /* Your gradient */
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24); /* Your box-shadow */
    padding: 0.5rem 1rem;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .button:hover {
    color: rgb(230, 230, 230); /* Your hover color */
    box-shadow: none; /* Your hover effect */
  }
  .logo img {
    height: 68px; /* Twice button height */
    width: 96px;  /* Twice button width */
  }

  @media (max-width: 768px) {
    .links {
      display: none;
    }
    .hamburger {
      display: block;
      justify-content: center;
      align-items: center;
      position: relative; /* Ensure proper positioning */
      right: 0; /* Align to the right */
    }
    .mobile-menu {
    display: none;
    }

    .mobile-menu.active {
      display: block;
    }
  }

</style>