---
import logo from '../assets/logo.svg';
const googleClientId = import.meta.env.PUBLIC_GOOGLE_CLIENT_ID;
// Ensures localStorage is only accessed in the browser
const isLoggedIn = typeof window !== "undefined" && localStorage.getItem("google_token");
---

<head>
  <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>

<nav>
  <!-- <img id="background" src={background.src} alt="Blurred background" fetchpriority="high" /> -->
  <div class="logo">
    <img src={logo.src} alt="Logo" />
    HOME
  </div>
  <div class="links">
    <a href="#" class="button">Booking</a>
    <a href="#" class="button">Blog</a>
    <a href="#" class="button">About</a>
    <!-- <div id="google-login-button"></div> -->
    <div id="g_id_onload"
         data-client_id={googleClientId}
         data-callback="handleCredentialResponse"
         data-auto_prompt="false"
         class="relative z-10">
    </div>
    <div class="g_id_signin relative z-10"
         data-type="standard"
         data-size="large"
         data-theme="outline"
         data-text="sign_in_with"
         data-shape="rectangular"
         data-logo_alignment="left">
    </div>
    <!-- {isLoggedIn ? (
      <button id="logout-button">Logout</button>
    ) : (
      <div id="google-login-button"></div>
    )} -->
  </div>
</nav>

<script >
  console.log("Current origin:", window.location.origin);
  window.onload = function () {
    const googleClientId = import.meta.env.PUBLIC_GOOGLE_CLIENT_ID;
    // console.log("Google Client ID:", googleClientId);

    if (!googleClientId || googleClientId === "undefined") {
      console.error("Google Client ID is missing!");
      return;
    }
    // @ts-ignore
    google.accounts.id.initialize({
      client_id: googleClientId,
      callback: handleCredentialResponse,
    });

    // @ts-ignore
    google.accounts.id.renderButton(
      document.getElementById("google-login-button"),
      { theme: "outline", size: "large" } // Customize button style
    );
  };


  function handleCredentialResponse(response: any) {
    if (!response || !response.credential) {
    console.error("Google login failed or user canceled.");
    return;
  }
    const token = response.credential;
    console.log("Google Token:", token);
    const payload = JSON.parse(atob(token.split('.')[1]));
    const email = payload.email;
    console.log("User email:", email);
    localStorage.setItem("google_token", response.credential);
    location.reload(); // Reload to update UI
  }
</script>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.8); /* Semi-transparent dark background */
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10; /* Ensure it stays on top */
  }
  .logo {
    font-size: 1.5rem;
    font-weight: bold;
  }
  .links a {
    margin-left: 1rem;
  }
  .button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%); /* Your gradient */
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24); /* Your box-shadow */
    padding: 0.5rem 1rem;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .button:hover {
    color: rgb(230, 230, 230); /* Your hover color */
    box-shadow: none; /* Your hover effect */
  }
  .logo img {
    height: 68px; /* Twice button height */
    width: 96px;  /* Twice button width */
  }
</style>